generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id               String            @id @default(uuid())
  fullName         String          @default("full_name")
  email            String
  password         String
  role             UserRole  @default(perfomer)

  @@map("users")
}

enum UserRole {
  admin
  perfomer
}

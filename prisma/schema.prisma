// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(uuid())
  fullName         String            @default("full_name")
  email            String
  password         String
  role             UserRole          @default(performer)
  quizzes          Quiz[]
}

model Quiz {
  id       String    @id @default(uuid())
  name     String
  category String
  mark     Int
  image    String
  questions Question[]
  userId   String
  user     User      @relation(fields: [userId], references: [id])
}

model Question {
  id        String    @id @default(uuid())
  question  String
  answer    String
  options   Option[]
  quizId    String
  quiz      Quiz      @relation(fields: [quizId], references: [id])
}

model Option {
  id        String    @id @default(uuid())
  option    String
  questionId String
  question   Question @relation(fields: [questionId], references: [id])
}




enum UserRole {
  admin
  performer
}

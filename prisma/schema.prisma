generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  fullName String
  email    String
  password String
  role     UserRole @default(performer)
  Quiz     Quiz[]
}

enum UserRole {
  admin
  performer
}

model Quiz {
  id        String         @id @default(uuid())
  name      String
  category  String
  mark      Int
  image     String
  userId    String
  user      User           @relation(fields: [userId], references: [id])
  questions QuizQuestion[]
}

model QuizQuestion {
  id      String       @id @default(uuid())
  title   String
  answer  String
  quizId  String
  quiz    Quiz         @relation(fields: [quizId], references: [id])
  options QuizOption[]
}

model QuizOption {
  id         String       @id @default(uuid())
  title      String
  questionId String 
  question   QuizQuestion @relation(fields: [questionId], references: [id])
}
